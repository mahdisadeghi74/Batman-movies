<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_navigation_host"
    app:startDestination="@layout/fragment_movies">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.yara.project.batmanproject.ui.fragment.MoviesFragment"
        android:label="MoviesFragment"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.yara.project.batmanproject.ui.fragment.MovieDetailFragment"
        android:label="MovieDetailFragment"
        tools:layout="@layout/fragment_detail_movie">
        <argument
            android:name="movie"
            app:argType="com.yara.project.batmanproject.model.Movie" />
    </fragment>
</navigation>